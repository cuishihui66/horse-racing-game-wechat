/* miniprogram/pages/wall/wall.wxss */
@import "../../app.wxss"; /* Import global styles */

page {
  background: linear-gradient(135deg, #4CAF50, #8BC34A); /* Fresh green gradient */
  display: flex; /* Override app.wxss to fill height */
  flex-direction: column;
  justify-content: flex-start;
  align-items: stretch;
  padding: 0; /* Override global padding */
  min-height: 100vh;
}

.container {
  flex-grow: 1;
  width: 100%;
  max-width: none; /* Override app.wxss max-width */
  padding: 40rpx;
  box-sizing: border-box;
  background-color: transparent; /* Remove container background */
  box-shadow: none; /* Remove container shadow */
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.page-title {
  font-size: 56rpx;
  font-weight: bold;
  color: #FFFFFF;
  text-shadow: 2rpx 2rpx 6rpx rgba(0, 0, 0, 0.4);
  margin-bottom: 50rpx;
  letter-spacing: 2rpx;
}

/* Scan Section */
.scan-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1; /* Take up remaining space */
}

.scan-tip {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 20rpx;
}

.button-primary {
  width: 70%; /* Adjust size */
  padding: 35rpx;
  font-size: 38rpx;
  margin-top: 80rpx;
  background-color: var(--primary-color);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

.button-primary:active {
  transform: scale(0.95);
  background-color: #E66A42;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.2);
}

/* Message Composition Section */
.message-section {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.session-info {
  font-size: 28rpx;
  color: var(--secondary-color);
  margin-bottom: 20rpx;
  text-align: left;
  padding-left: 10rpx;
}

.message-input {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 15rpx;
  color: var(--text-color);
  font-size: 32rpx;
  line-height: 1.5;
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  resize: none;
}

.input-actions {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 20rpx;
}

.image-upload-area {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.image-btn {
  width: 180rpx;
  height: 180rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border: 2rpx dashed rgba(255, 255, 255, 0.5);
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  transition: all 0.2s ease;
}

.image-btn:active {
  background-color: rgba(0, 0, 0, 0.5);
  transform: scale(0.98);
}

.add-image-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.image-preview-wrapper {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  border-radius: 15rpx;
  overflow: hidden;
  border: 2rpx solid var(--secondary-color);
}

.image-preview {
  width: 100%;
  height: 100%;
  display: block;
}

.remove-image {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  font-weight: bold;
  cursor: pointer;
  z-index: 10;
}

.button-send {
  width: 200rpx;
  height: 90rpx;
  background-color: var(--accent-color); /* Green Accent */
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 45rpx;
  border: none;
  box-shadow: 0 6rpx 15rpx rgba(0, 0, 0, 0.2);
  transition: all 0.2s ease;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-send:active {
  transform: scale(0.95);
  background-color: darken(var(--accent-color), 10%);
}

.button-send[disabled] {
  opacity: 0.6;
  cursor: not-allowed;
  transform: none;
  box-shadow: none;
}
